<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_light</item>
    </style>

    <style name="MyActionbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>

    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Root.NoList">
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <style name="Root.HasList">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
    </style>

    <style name="Root.ListItem">
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="RaisedButton" parent="android:TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RaisedButton.InLine">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RaisedButton.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="EmptyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SectionHeader">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/listSeparatorTextViewStyle</item>
    </style>
</resources>
